{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "semi": [2, "never"],
        "no-unexpected-multiline": 1,
        "no-use-before-define": 0,
        "key-spacing": ["error", {
            "beforeColon": false,
            "afterColon": true,
            "mode": "minimum"
        }],
        "no-multi-spaces": "error",
        "no-console": "error",
        "arrow-spacing": ["error", {
            "before": true,
            "after": true
        }
        ]
    },
    "ignorePatterns": ["webpack.config*.js", "devServer.js"]    
}
